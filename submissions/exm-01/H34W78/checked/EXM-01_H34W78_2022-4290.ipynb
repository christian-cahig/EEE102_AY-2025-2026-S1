import math
import cmath
import scipy.optimize as spo

# Given data
p1 = 301.0        # kW (Bonnie)
q2 = 334.0        # kVAr (Clyde)
phi1 = 0.73       # power factor (Bonnie)
phi2 = 0.84       # power factor (Clyde)
r1 = 0.99
x1 = 2.51
r2 = 0.97
x2 = 2.45
u = 49.0          # substation bus voltage in kV (nominal)


# Derived Q1 and P2 from PFs (lagging)
theta1 = math.acos(phi1)
q1 = p1 * math.tan(theta1)             # Q1 (kVAr)
theta2 = math.acos(phi2)
p2 = q2 / math.tan(theta2)             # P2 (kW)

# Helper: compute A and B = components of S * Z_conj = (P+jQ)*(r - jx)
def AB(P, Q, r, x):
    A = P * r + Q * x
    B = Q * r - P * x
    return A, B

A1, B1 = AB(p1, q1, r1, x1)
A2, B2 = AB(p2, q2, r2, x2)

# f and g: real scalar equations whose roots are v1 and v2 respectively.
# Using: | v^2 - (A + jB) |^2 - v^2 * v_ss^2 = 0
def f(v, v_ss=u, A=A1, B=B1):
    return (v * v - A) ** 2 + (B ** 2) - (v * v) * (v_ss * v_ss)

def g(v, v_ss=u, A=A2, B=B2):
    return (v * v - A) ** 2 + (B ** 2) - (v * v) * (v_ss * v_ss)

# Derivatives (w.r.t. v) used by Newton
# df/dv = 4 v (v^2 - A) - 2 v v_ss^2
def df(v, v_ss=u, A=A1, B=B1):
    return 4.0 * v * (v * v - A) - 2.0 * v * (v_ss * v_ss)

def dg(v, v_ss=u, A=A2, B=B2):
    return 4.0 * v * (v * v - A) - 2.0 * v * (v_ss * v_ss)

# Given v (real, positive), compute phasor angle delta:
# e^{j delta} = (v^2 - (A + jB)) / (v * v_ss)
# delta = arg( numerator )
def calc_angle_diff(v1, v2, v_ss=u, A1=A1, B1=B1, A2=A2, B2=B2):
    num1 = complex(v1 * v1 - A1, -0.0) - complex(0.0, B1)  # v1^2 - (A1 + jB1)
    num1 = complex(v1 * v1 - A1, -B1)
    val1 = num1 / (v1 * v_ss)
    delta1 = math.atan2(val1.imag, val1.real)

    num2 = complex(v2 * v2 - A2, -B2)
    val2 = num2 / (v2 * v_ss)
    delta2 = math.atan2(val2.imag, val2.real)

    # principal difference in radians (keep sign if desired)
    d = delta1 - delta2
    # wrap into (-pi, pi]
    d = (d + math.pi) % (2.0 * math.pi) - math.pi
    return d  # radians

# ----------------------------
# Solve using bisection
# choose intervals that bracket roots (found empirically)
_V1L, _V1U = 60.0, 100.0
_V2L, _V2U = 60.0, 80.0

v1_bs, v1_bs_info = spo.bisect(lambda v: f(v), _V1L, _V1U, full_output=True)
v2_bs, v2_bs_info = spo.bisect(lambda v: g(v), _V2L, _V2U, full_output=True)

print("-----")
print(v1_bs_info)
print("-----")
print(v2_bs_info)
print()
print("Solving for Bonnie's operating voltage using the bisection method...")
print(f"\tinterval: {_V1L} - {_V1U} kilovolts")
print(f"\troot: {v1_bs:.12f} kV")
print(f"\tresidual (f(v1_bs)): {f(v1_bs):.3e}")
print()
print("Solving for Clyde's operating voltage using the bisection method...")
print(f"\tinterval: {_V2L} - {_V2U} kilovolts")
print(f"\troot: {v2_bs:.12f} kV")
print(f"\tresidual (g(v2_bs)): {g(v2_bs):.3e}")
angle_rad_bs = calc_angle_diff(v1_bs, v2_bs)
print()
print(f"Phase-angle difference: {angle_rad_bs * 180.0 / math.pi:.12f} degrees ( = {angle_rad_bs:.12f} radians )")
print("\n-----------------------------------------\n")

# ----------------------------
# Newton-Raphson (use derivative)
_V1NR = 70.0   # initial guess for v1
_V2NR = 70.0   # initial guess for v2

v1_nr, v1_nr_info = spo.newton(lambda v: f(v), _V1NR, fprime=lambda v: df(v), full_output=True)
v2_nr, v2_nr_info = spo.newton(lambda v: g(v), _V2NR, fprime=lambda v: dg(v), full_output=True)

print("-----")
print(v1_nr_info)
print("-----")
print(v2_nr_info)
print()
print("Solving for Bonnie's operating voltage using the Newton-Raphson method...")
print(f"\tstart: {_V1NR} kilovolts")
print(f"\troot: {v1_nr:.12f} kV")
print(f"\tresidual: {f(v1_nr):.3e}")
print()
print("Solving for Clyde's operating voltage using the Newton-Raphson method...")
print(f"\tstart: {_V2NR} kilovolts")
print(f"\troot: {v2_nr:.12f} kV")
print(f"\tresidual: {g(v2_nr):.3e}")
angle_rad_nr = calc_angle_diff(v1_nr, v2_nr)
print()
print(f"Phase-angle difference: {angle_rad_nr * 180.0 / math.pi:.12f} degrees ( = {angle_rad_nr:.12f} radians )")
print("\n-----------------------------------------\n")

# ----------------------------
# Secant (via scipy.optimize.newton with two starting points)
_V1SC_a, _V1SC_b = 50.0, 80.0
_V2SC_a, _V2SC_b = 50.0, 80.0

v1_sc, v1_sc_info = spo.newton(lambda v: f(v), x0=_V1SC_a, x1=_V1SC_b, full_output=True)
v2_sc, v2_sc_info = spo.newton(lambda v: g(v), x0=_V2SC_a, x1=_V2SC_b, full_output=True)

print("-----")
print(v1_sc_info)
print("-----")
print(v2_sc_info)
print()
print("Solving for Bonnie's operating voltage using the secant method...")
print(f"\tstart: {_V1SC_a}, {_V1SC_b} kilovolts")
print(f"\troot: {v1_sc:.12f} kV")
print(f"\tresidual: {f(v1_sc):.3e}")
print()
print("Solving for Clyde's operating voltage using the secant method...")
print(f"\tstart: {_V2SC_a}, {_V2SC_b} kilovolts")
print(f"\troot: {v2_sc:.12f} kV")
print(f"\tresidual: {g(v2_sc):.3e}")
angle_rad_sc = calc_angle_diff(v1_sc, v2_sc)
print()
print(f"Phase-angle difference: {angle_rad_sc * 180.0 / math.pi:.12f} degrees ( = {angle_rad_sc:.12f} radians )")
